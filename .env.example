MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=rag-documents
MINIO_SECURE=false

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
